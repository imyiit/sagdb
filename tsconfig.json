{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "module": "CommonJS",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
